set ruler
syntax on

" Set encoding
set encoding=utf-8

let mapleader=','

" Whitespace stuff
set tabstop=4
set shiftwidth=4
set softtabstop=4
set noeol
set autoindent
set incsearch
set ignorecase
set smartcase
" Color Schema

let g:solarized_termcolors=256
set t_Co=256
set background=dark
colorscheme solarized
